{
    "name": "maintenance",
    "version": "1.0.0",
    "author": "Stutz Medien <development@stutz-medien.ch> (https://stutz-medien.ch)",
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "resolutions": {
        "cross-spawn": ">=7.0.5",
        "tmp": ">=0.2.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/cz-commitlint": "^19.8.1",
        "@commitlint/prompt": "^19.8.1",
        "@prettier/plugin-php": "^0.22.4",
        "@types/jest": "^29.5.14",
        "@types/jsdom": "^21.1.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@wordpress/eslint-plugin": "^17.13.0",
        "@wordpress/prettier-config": "^3.15.0",
        "chokidar": "^4.0.3",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "0.25.10",
        "esbuild-plugin-sass": "^1.0.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.2",
        "eslint-config-standard": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.10.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-promise": "^6.6.0",
        "fs-extra": "^11.3.2",
        "glob": "^10.4.5",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jquery": "^3.7.1",
        "normalize-scss": "^7.0.1",
        "prettier": "^3.6.2",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.93.2",
        "stylelint": "^16.25.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-scss": "^6.12.1",
        "ts-jest": "^29.4.4",
        "typescript": "^5.9.3"
    },
    "description": "Enable maintenance mode on your WordPress page.",
    "license": "ISC",
    "scripts": {
        "dev": "node esbuild.config.js",
        "build": "NODE_ENV=production node esbuild.config.js",
        "watch": "WATCH=true node esbuild.config.js",
        "lint": "eslint 'assets/src/**/*.{ts,jsx}'",
        "lint:fix": "eslint 'assets/src/**/*.{js,jsx}' --fix",
        "lint:scss": "stylelint '**/*.scss'",
        "lint:scss:fix": "stylelint '**/*.scss' --fix",
        "lint:php": "vendor/bin/phpcs --standard=phpcs.xml",
        "lint:php:fix": "vendor/bin/phpcbf --standard=phpcs.xml",
        "format": "prettier --write 'assets/src/**/*.{js,jsx,json,css,scss,md}'",
        "test": "jest",
        "prepare": "husky"
    }
}
