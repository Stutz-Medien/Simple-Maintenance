{
    "name": "silencer",
    "version": "1.0.0",
    "description": "Surpresses all comments on your WordPress site.",
    "main": "index.js",
    "scripts": {
        "dev": "node esbuild.config.js",
        "build": "NODE_ENV=production node esbuild.config.js",
        "watch": "WATCH=true node esbuild.config.js",
        "lint": "eslint 'assets/src/**/*.{ts,jsx}'",
        "lint:fix": "eslint 'assets/src/**/*.{js,jsx}' --fix",
        "lint:scss": "stylelint '**/*.scss'",
        "lint:scss:fix": "stylelint '**/*.scss' --fix",
        "lint:php": "vendor/bin/phpcs --standard=phpcs.xml",
        "lint:php:fix": "vendor/bin/phpcbf --standard=phpcs.xml",
        "format": "prettier --write 'assets/src/**/*.{js,jsx,json,css,scss,md}'",
        "test": "jest",
        "prepare": "husky"
    },
    "author": "Stutz Medien <development@stutz-medien.ch> (https://stutz-medien.ch)",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/prompt": "^18.6.1",
        "@prettier/plugin-php": "^0.22.1",
        "@types/jest": "^29.5.12",
        "@types/jsdom": "^21.1.6",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@wordpress/eslint-plugin": "^17.6.0",
        "@wordpress/prettier-config": "^3.6.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "0.20.0",
        "esbuild-plugin-sass": "^1.0.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "glob": "^10.3.10",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jquery": "^3.6.0",
        "jsdom": "^24.0.0",
        "normalize-scss": "^7.0.1",
        "prettier": "^3.2.4",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.32.13",
        "sass-loader": "^11.1.1",
        "stylelint": "^16.2.1",
        "stylelint-config-standard-scss": "^13.0.0",
        "stylelint-scss": "^6.1.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "chokidar": "^3.6.0",
        "lodash": "^4.17.21"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/@commitlint/prompt"
        }
    }
}
